<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_songList_notification"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title_notification"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minWidth="200dp"
        android:text="music_title"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/txt_artist_notification"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:minWidth="200dp"
        android:text="music_title"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/img_previous_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_skip_previous"/>

    <ImageView
        android:id="@+id/img_next_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_pause_arrow"/>


    <ImageView
        android:id="@+id/img_play_pause_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_skip_next" />



    <ImageView
        android:id="@+id/img_close_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        app:srcCompat="@drawable/ic_close" />
</FrameLayout>